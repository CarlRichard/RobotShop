{% extends 'base.html.twig' %}

{% block body %}
    <h1>Robot Shop</h1>


    <div class="nav">
        <a href="{{ path('cart_index') }}" class="btn-cart {% if app.session.get('panier')|length > 0 %}btn-cart-full{% endif %}">
            üõí Panier ({{ app.session.get('panier')|length }})
        </a>
    </div>

    <!-- Filtre de cat√©gorie -->
    <div class="filter-container">
        <form method="get" action="{{ path('robot_shop') }}">
            <select name="category_id">
                <option value="0" {% if category_id == 0 %}selected{% endif %}>Toutes les cat√©gories</option>
                {% for category in categories %}
                    <option value="{{ category.id }}" {% if category.id == category_id %}selected{% endif %}>
                        {{ category.name }}
                    </option>
                {% endfor %}
            </select>
            <button type="submit">Filtrer</button>
        </form>
    </div>

    <!-- Affichage des robots -->
    <div class="container">
        {% for robot in robots %}
            <div class="card">
                <a href="{{ path('app_robot_show', {'id': robot.id}) }}" class="card-link">
                    <img src="{{ asset('images/' ~ robot.image ~ '.png') }}" alt="Image de {{ robot.name }}">
                    <h2>{{ robot.name }}</h2>
                    <p>{{ robot.description }}</p>
                    <div class="flex">
                        <p class="price">Prix : {{ robot.price }} ‚Ç¨</p>
                        <p>Cat√©gorie : <strong>{{ robot.category.name }}</strong></p>
                    </div>
                    <form action="{{ path('cart_add', {'id': robot.id}) }}" method="post">
                        <button type="submit" class="btn">Acheter</button>
                    </form>
                </a>
            </div>
        {% else %}
            <p>Aucun robot disponible pour le moment.</p>
        {% endfor %}
    </div>

    <div class="pagination">
        {% if page > 1 %}
            <a href="{{ path('robot_shop', {page: page - 1, category_id: category_id}) }}" class="btn">Pr√©c√©dent</a>
        {% else %}
            <a href="#" class="btn disabled">Pr√©c√©dent</a>
        {% endif %}

        {% for i in 1..maxPage %}
            <a href="{{ path('robot_shop', {page: i, category_id: category_id}) }}" class="{{ i == page ? 'btn active' : 'btn' }}">
                {{ i }}
            </a>
        {% endfor %}

        {% if page < maxPage %}
            <a href="{{ path('robot_shop', {page: page + 1, category_id: category_id}) }}" class="btn">Suivant</a>
        {% else %}
            <a href="#" class="btn disabled">Suivant</a>
        {% endif %}
    </div>
{% endblock %}
